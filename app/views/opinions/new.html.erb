<h1>What's the bestest?</h1>

<%= form_for @opinion, :html => {class: 'new_user form-inline'} do |f| %>

    <fieldset>
        <div class="form-group">
            <div class="col-md-3">
                <%= f.text_field :item, class: 'form-control', autofocus: true, placeholder: 'Bestest', required: 'true'%>
            </div>
        </div>
        is the best
        <div class="form-group">
            <div class="col-md-3">
                <%= f.text_field :category, class: 'form-control', placeholder: 'website', required: 'true'%>
            </div>
        </div>

        <div class="form-group">
          <%= f.select(:prep, options_for_select([['in', 'in'], ['at', 'at'], ['of', 'of'], ['on', 'on'], ['for', 'for']], "in"), {}, {required: 'true', autofocus: 'true', class: 'form-control'})%>
      </div>

        <div class="form-group">
            <div class="col-md-3">
                <%= f.text_field :field, class: 'form-control', placeholder: 'the world', required: 'true' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3 col-md-offset-4">
                <%= f.submit 'Tell Everyone', class: 'btn btn-success' %>
            </div>
        </div>
    </fieldset>
<% end %>

<h2>bestest feed</h2>


  <% @opinions.each do |o| %>

  <div class="row">
    <hr>
    <div class="col-xs-2">
      <% unless logged_in? && current_user.id == o.user_id %>
        <h5><%= link_to '<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>'.html_safe, "#{o.id}/upvote", class: 'btn btn-success btn-xs' %></h5>
      <% end %>
      <h5> <%= o.score %> </h5>
      <% unless logged_in? && current_user.id == o.user_id %>
        <h5> <%= link_to '<span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>'.html_safe, "#{o.id}/downvote", class: 'btn btn-danger btn-xs' %></h5>
      <% end %>
      <% if logged_in? && current_user.id == o.user_id %>
        <h5> remove <%= link_to '[x]', "#{o.id}/delete"%></h5>
      <% end %>
    </div>
    <div class="col-xs-10">
      <h3>"<%= o.item %> is the best <%= o.category %> <%= o.prep %> <%= o.field %>."</h3>
    </div>

  </div>
  <% end %>
