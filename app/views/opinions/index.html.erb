<% if params[:search] %>
  <h1><%= "best #{params[:search]}" %></h1>
  <% if flash[:alert] %>
  <div class="alert alert-warning">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Oh no!</strong> <%= flash[:alert] %>
  </div>
  <% end %>
  <%else%>
  <h1>Popular Feed</h1>
<% end %>

<% @opinions.each do |o| %>
  <div class="row opinion-box">
    <div class="col-xs-1">
      <% unless logged_in? && current_user.id == o.user_id %>
        <h5><%= link_to '<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>'.html_safe, "/opinions/#{o.id}/upvote", class: 'btn btn-success btn-xs' %></h5>
        <% else %>
        <h5> <%= link_to '<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>'.html_safe, {},class: 'btn btn-warning btn-xs' %></h5>
      <% end %>
      <h5> <%= o.score %> </h5>
      <% unless logged_in? && current_user.id == o.user_id %>
        <h5> <%= link_to '<span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>'.html_safe, "/opinions/#{o.id}/downvote", class: 'btn btn-danger btn-xs' %></h5>
        <% else %>
        <h5> <%= link_to '<span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>'.html_safe, {}, class: 'btn btn-warning btn-xs' %></h5>
      <% end %>
      <% if logged_in? && current_user.id == o.user_id %>
        <h5><%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, "/opinions/#{o.id}/delete", class: 'btn btn-danger btn-xs'%></h5>
      <% end %>
    </div>
    <div class="col-xs-11 ">
      <h3>"<%= o.item %> is the best<br> <%= o.category %> <%= o.prep %> <%= o.field %>."</h3>
    </div>
  </div>
  <br>
<% end %>
